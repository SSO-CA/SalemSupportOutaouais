---
const { img, title, paragraph } = Astro.props;
---

<article class="card">
    <img src={img} alt="">
    <div class="content">
        <h4>{title}</h4>
        <hr style="color: rgb(255, 255, 255);">
        <p>{paragraph}</p>
    </div>
</article>

<style>
.card{
  border-radius: .5rem;
  background-color: white;

}
.card img{
  border-radius: .5rem .5rem 0rem 0rem;
  width: 100%;

}
.card .content{
  padding: 1rem;

}

@media (width > 800px) {
    .card{
        border-radius: .5rem;
        background-color: white;

    }
    .card img{
        border-radius: .5rem .5rem 0rem 0rem;

    }
    .card .content{
        padding: 1rem;
    }
}
</style>